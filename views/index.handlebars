<h3 class="container my-4 p-3 text-center font-italic">Click on the burger to eat it</h3>

<main>
  <div class="container">
    <div class="row">
      <div class="col s6 border rounded border-success p-2 m-2 z-depth-3">
        {{#each burgers}}
          {{#unless this.devoured}}
            <div>
              <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
                <button type="submit" class='burgerAvailable btn m-2 z-depth-2'> {{this.burger_name}}</button>
              </form>
            </div>
          {{/unless}}
        {{/each}}
      </div>

      <div class="col s6 border rounded border-danger p-2 m-2 z-depth-3">
        {{#each burgers}}
          {{#if this.devoured}}
            <div class='burgerEaten'>
              <div class="border border-warning rounded my-2 p-2 text-center font-weight-bold z-depth-2">
                {{this.burger_name}}
              </div>
            </div>
          {{/if}}
        {{/each}}
      </div>
    </div>
  </div>
</main>

<h4 class="container">Add A Burger Option</h4>

<div class="row container">
  <div class="col s12">
    <form action="/burgers" method="POST">
      <input type="text" id="name" name="burger_name" placeholder="Type in a burger">
      <button class="btn waves-effect waves-light addBurgerButton z-depth-4" type="submit" name="action">
        <i class="material-icons center">Add A Burger</i>
      </button>
    </form>
  </div>
</div>
